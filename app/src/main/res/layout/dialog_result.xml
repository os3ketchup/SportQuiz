<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_background"
    android:layout_margin="8dp"
    android:paddingTop="8dp"
    android:gravity="center"
    android:paddingBottom="8dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/tv_title"
    android:fontFamily="@font/fjala"
    android:textSize="24sp"
    android:text="Result"
    android:layout_marginTop="18dp"
    android:layout_marginBottom="18dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/iv_trophy"
        android:src="@drawable/trophy"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:paddingBottom="18dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_congrats"
        android:paddingBottom="18dp"
        android:fontFamily="@font/kaushan"
        android:text="Congratulations "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_user_name"
        android:text="Micheal"
        android:fontFamily="@font/fjala"
        android:textSize="18sp"
        android:paddingBottom="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/carrot"/>

        <TextView
            android:id="@+id/tv_result"
            android:textSize="18sp"
            android:text="Your score is 9 out of 10"
            android:fontFamily="@font/fjala"
            android:paddingBottom="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            />

<Button
    android:id="@+id/button_finish"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="finish"
    android:fontFamily="@font/fjala"
    android:backgroundTint="@color/white"
    android:textColor="@color/military_blue"/>
</LinearLayout>